{
  "name": "testrail-modern-client",
  "version": "1.0.0",
  "publishConfig": {
    "access": "public"
  },
  "description": "A modern TypeScript client for TestRail API",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "prepare": "npm run build",
    "format": "biome format --write .",
    "lint": "biome lint .",
    "check": "biome check --apply .",
    "docs": "typedoc --out docs src/index.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kiwamizamurai/testrail-modern-client.git"
  },
  "keywords": [
    "testrail",
    "api",
    "client",
    "testing",
    "test-management",
    "typescript",
    "api-client"
  ],
  "author": "kiwamizamurai",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kiwamizamurai/testrail-modern-client/issues"
  },
  "homepage": "https://github.com/kiwamizamurai/testrail-modern-client#readme",
  "files": [
    "dist"
  ],
  "dependencies": {
    "@types/form-data": "^2.5.2",
    "axios": "^1.6.8",
    "form-data": "^4.0.1"
  },
  "devDependencies": {
    "@biomejs/biome": "1.5.3",
    "@types/node": "^20.11.30",
    "typedoc": "^0.27.7",
    "typedoc-plugin-markdown": "^4.4.2",
    "typescript": "^5.4.2"
  },
  "engines": {
    "node": ">=14"
  }
}
